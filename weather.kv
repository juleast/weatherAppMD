<DrawerItem@MDNavigationDrawerItem>:
    padding: 0, 0, "10dp", 0
    focus_color: app.theme_cls.primary_light
<Content>:
    orientation: 'vertical'
<MainScreen>:
    # other widget variables
    nav_drawer: nav_drawer
    # the main navigation layout
    MDNavigationLayout:
        ScreenManager:
            id: screenmanager
            # the main screen that contains stuff related to weather
            Screen:
                name: "main"
                id: main
                MDGridLayout:
                    rows: 3
                    # the top app bar for title, updates and etc.
                    MDTopAppBar:
                        id: city_name
                        md_bg_color: app.theme_cls.accent_light
                        title: "Simple Weather"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [["reload", lambda x: root.update()]]
                    MDProgressBar:
                        id: progress
                        halign: "center"
                        size_hint_y: None
                        height: "4dp"
                        type: "indeterminate"
                    # the bottom navigation widget and a few screens for today, tomorrow and 10 days weather
                    MDBottomNavigation:
                        panel_color: app.theme_cls.primary_light
                        # today weather page
                        MDBottomNavigationItem:
                            name: "screen 1"
                            text: "Today"
                            icon: "sun-thermometer"
                            # background image
                            FitImage:
                                source: './assets/images/bg/25501.jpg'
                            # basic weather info
                            MDGridLayout:
                                rows: 2
                                padding: (20, "10dp", 20, 20)
                                # temperature and condition
                                MDGridLayout:
                                    cols: 2
                                    size_hint_y: .6
                                    MDGridLayout:
                                        rows: 3
                                        MDLabel:
                                            id: date
                                            text: "mm/dd, HH:MM"
                                            halign: "center"
                                            size_hint_y: .1
                                        # labels that show low and high temperatures
                                        MDGridLayout:
                                            cols: 2
                                            padding: "5dp", 0, "5dp", 0
                                            size_hint_y: .2
                                            MDGridLayout:
                                                cols: 2
                                                MDIcon:
                                                    icon: "arrow-down-thin"
                                                    size_hint: (1, .5)
                                                    halign: 'right'
                                                MDLabel:
                                                    id: temp_low
                                                    text: "0째"
                                                    font_size: "15sp"
                                                    halign: 'left'
                                            MDGridLayout:
                                                cols: 2
                                                MDIcon:
                                                    icon: "arrow-up-thin"
                                                    size_hint: (1, .5)
                                                    halign: 'right'
                                                MDLabel:
                                                    id: temp_high
                                                    text: "0째"
                                                    font_size: "15sp"
                                                    halign: 'left'
                                        # layout that has labels for main temperature and feels like temperature
                                        MDGridLayout:
                                            rows: 2
                                            size_hint_y: .6
                                            MDLabel:
                                                id: temp_text
                                                text: "0째"
                                                halign: 'center'
                                                font_size: "56sp"
                                            MDLabel:
                                                id: temp_feels
                                                text: "Feels Like 0째"
                                                font_size: "15sp"
                                                halign: "center"
                                                size_hint_y: .3
                                    # layout that has weather icon and conditions
                                    MDGridLayout:
                                        rows: 2
                                        # emtpy label to level out the size of the icon with the main temp label
                                        MDLabel:
                                            size_hint_y: .4
                                        MDGridLayout:
                                            rows: 2
                                            Image:
                                                id: weather_icon
                                                valign: 'center'
                                                source: "./assets/icons/clear-day.png"
                                            MDLabel:
                                                id: weather_condition
                                                text: "Clear"
                                                font_size: "15sp"
                                                size_hint_y: .2
                                                halign: 'center'
                                # misc weather data
                                MDGridLayout:
                                    rows: 4
                                    MDGridLayout:
                                        size_hint_y: .2
                                        rows: 2
                                        MDLabel:
                                            size_hint_y: .1
                                        MDSeparator:
                                            height: "2dp"
                                    MDGridLayout:
                                        size_hint_y: 1
                                        cols: 2
                                        MDLabel:
                                            text: "Precipitation"
                                            halign: "center"
                                        MDLabel:
                                            id: weather_precip
                                            text: "0%"
                                    MDGridLayout:
                                        size_hint_y: 1
                                        cols: 2
                                        MDLabel:
                                            text: "Wind Speed"
                                            halign: "center"
                                        MDLabel:
                                            id: weather_wind
                                            text: "0 km/h"
                                    MDGridLayout:
                                        size_hint_y: 1
                                        cols: 2
                                        MDLabel:
                                            text: "Humidity"
                                            halign: "center"
                                        MDLabel:
                                            id: weather_humid
                                            text: "0%"
                        # tomorrow weather page
                        MDBottomNavigationItem:
                            name: "screen 2"
                            text: "Tomorrow"
                            icon: "sun-clock"
                            # background image
                            FitImage:
                                source: './assets/images/bg/25501.jpg'
                            # basic weather info
                            MDGridLayout:
                                rows: 2
                                padding: (20, "10dp", 20, 20)
                                # temperature and condition
                                MDGridLayout:
                                    cols: 2
                                    size_hint_y: .6
                                    MDGridLayout:
                                        rows: 3
                                        # label to show date
                                        MDLabel:
                                            id: date_tmr
                                            text: "mm/dd, HH:MM"
                                            halign: "center"
                                            size_hint_y: .1
                                        # labels that show low and high temperatures
                                        MDGridLayout:
                                            cols: 2
                                            padding: "5dp", 0, "5dp", 0
                                            size_hint_y: .2
                                            MDGridLayout:
                                                cols: 2
                                                MDIcon:
                                                    icon: "arrow-down-thin"
                                                    size_hint: (1, .5)
                                                    halign: 'right'
                                                MDLabel:
                                                    id: temp_low_tm
                                                    text: "0째"
                                                    font_size: "15sp"
                                                    halign: 'left'
                                            MDGridLayout:
                                                cols: 2
                                                MDIcon:
                                                    icon: "arrow-up-thin"
                                                    size_hint: (1, .5)
                                                    halign: 'right'
                                                MDLabel:
                                                    id: temp_high_tm
                                                    text: "0째"
                                                    font_size: "15sp"
                                                    halign: 'left'
                                        # shows weather condition for tmr weather
                                        MDLabel:
                                            id: weather_condition_tm
                                            text: "Clear"
                                            font_size: "15sp"
                                            halign: "center"
                                            size_hint_y: .6
                                    # layout that has weather icon
                                    MDGridLayout:
                                        rows: 3
                                        MDLabel:
                                            size_hint_y: .3
                                        Image:
                                            id: weather_icon_tm
                                            valign: 'center'
                                            source: "./assets/icons/clear-day.png"
                                        MDLabel:
                                            size_hint_y: .3

                                # misc weather data
                                MDGridLayout:
                                    rows: 4
                                    MDGridLayout:
                                        size_hint_y: .2
                                        rows: 2
                                        MDLabel:
                                            size_hint_y: .1
                                        MDSeparator:
                                            height: "2dp"
                                    MDGridLayout:
                                        size_hint_y: 1
                                        cols: 2
                                        MDLabel:
                                            text: "Precipitation"
                                            halign: "center"
                                        MDLabel:
                                            id: weather_precip_tm
                                            text: "0%"
                                    MDGridLayout:
                                        size_hint_y: 1
                                        cols: 2
                                        MDLabel:
                                            text: "Wind Speed"
                                            halign: "center"
                                        MDLabel:
                                            id: weather_wind_tm
                                            text: "0 km/h"
                                    MDGridLayout:
                                        size_hint_y: 1
                                        cols: 2
                                        MDLabel:
                                            text: "Humidity"
                                            halign: "center"
                                        MDLabel:
                                            id: weather_humid_tm
                                            text: "0%"
                        # 10 days weather page
                        MDBottomNavigationItem:
                            name: "screen 3"
                            text: "10 days"
                            icon: "clock-fast"
                            MDLabel:
                                text: "Work in progress..."
                                halign: 'center'

            Screen:
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                name: "settings"
                MDGridLayout:
                    rows: 2
                    MDTopAppBar:
                        left_action_items: [["arrow-left", lambda x: root.open_main()]]
                    MDScrollView:
                        MDList:
                            adaptive_height: True
                            ThreeLineListItem:
                                text: "Default location"
                                divider: "Full"
                                secondary_text: "Change the default location for when"
                                tertiary_text: "the app is launched."
                                on_release: print("yeet")
                            TwoLineListItem:
                                padding: (0, "10dp", 0, 0)
                                text: "Unit of measurement"
                                secondary_text: "Change unit of measure used for"
                                tertiary_text: "weather data."
                            TwoLineListItem:
                                text: ""


            Screen:
                name: "logs"
                MDGridLayout:
                    rows: 2
                    MDTopAppBar:
                        left_action_items: [["arrow-left", lambda x: root.open_main()]]


        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, "16dp", "16dp", 0)
            md_bg_color: "lightgrey"
            size_hint_x: .7
            MDNavigationDrawerMenu:
                MDNavigationDrawerHeader:
                    title: "Simple Weather"
                    title_font_size: "20sp"
                    title_halign: 'center'
                    padding: 0, 0, "26dp", 0
                MDNavigationDrawerDivider:
                    size_hint_x: 1
                    padding: 0, "10dp", 0, "10dp"
                DrawerItem:
                    icon: "map-marker-multiple"
                    text: "Locations"
                    on_release: root.picker.open()
                DrawerItem:
                    icon: "cog"
                    text: "Settings"
                    on_release: root.open_settings()
