<mainScreen>:
    # access variables relating to main weather data
    temp: temp_text
    temp_low: temp_low
    temp_high: temp_high
    temp_feels: temp_feels
    city_name: city_name
    weather_icon: weather_icon
    weather_condition: weather_condition
    weather_precip: weather_precip
    weather_wind: weather_wind
    weather_humid: weather_humid
    MDGridLayout:
        rows: 2
        MDTopAppBar:
            id: city_name
            title: "Simple Weather"
            left_action_items: [["menu"]]
            right_action_items: [["reload", lambda x: root.update()]]
        MDBottomNavigation:
            MDBottomNavigationItem:
                md_bg_color: app.theme_cls.primary_color
                name: "screen 1"
                text: "Today"
                # basic weather info
                MDGridLayout:
                    rows: 2
                    padding: 10
                    # temperature and condition
                    MDGridLayout:
                        canvas.before:
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
                        cols: 2
                        size_hint_y: .6
                        MDGridLayout:
                            canvas.before:
                                Line:
                                    width: 1
                                    rectangle: self.x, self.y, self.width, self.height
                            rows: 2
                            MDLabel:
                                id: temp_text
                                text: "Temp"
                                halign: 'center'
                                font_size: "46sp"
                            MDGridLayout:
                                canvas.before:
                                    Line:
                                        width: 1
                                        rectangle: self.x, self.y, self.width, self.height
                                size_hint_y: .4
                                rows: 2
                                MDGridLayout:
                                    cols: 2
                                    MDLabel:
                                        id: temp_low
                                        text: "low"
                                        halign: 'center'
                                    MDLabel:
                                        id: temp_high
                                        text: "high"
                                        halign: 'center'
                                MDLabel:
                                    id: temp_feels
                                    text: "Feels Like"
                                    halign: 'center'
                        MDGridLayout:
                            canvas.before:
                                Line:
                                    width: 1
                                    rectangle: self.x, self.y, self.width, self.height
                            size_hint_y: 1
                            rows: 2
                            Image:
                                id: weather_icon
                                valign: 'center'
                                source: "./assets/icons/weather_sunny.png"
                            MDLabel:
                                id: weather_condition
                                size_hint_y: .4
                                text: "Clear"
                                halign: 'center'
                    MDGridLayout:
                        canvas.before:
                            Line:
                                width: 1
                                rectangle: self.x, self.y, self.width, self.height
                        size_hint_y: 1
                        rows: 3
                        MDGridLayout:
                            size_hint_y: 1
                            cols: 2
                            MDLabel:
                                text: "Precip"
                            MDLabel:
                                id: weather_precip
                                text: "1%"
                        MDGridLayout:
                            size_hint_y: 1
                            cols: 2
                            MDLabel:
                                text: "Wind Speed"
                            MDLabel:
                                id: weather_wind
                                text: "2 km/h"
                        MDGridLayout:
                            size_hint_y: 1
                            cols: 2
                            MDLabel:
                                text: "Humidity"
                            MDLabel:
                                id: weather_humid
                                text: "50%"

            MDBottomNavigationItem:
                name: "screen 2"
                text: "Tomorrow"
                MDLabel:
                    text: "Yeet2"
                    halign: 'center'
            MDBottomNavigationItem:
                name: "screen 3"
                text: "10 days"
                MDLabel:
                    text: "Yeet3"
                    halign: 'center'
